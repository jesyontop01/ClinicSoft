<style>
    /* Show it is fixed to the top */
    body {
        min-height: 25rem;
        padding-top: 4.5rem;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PED Malpractice Portal</title>
    <link rel="stylesheet" href="~/css/thirdparty.bundle.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/thirdparty.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-light " style="background-color: #e0dbdb;">
            <div class="container">
                <img src="~/images/bgLogo.png" width="30" height="30" class="d-inline-block align-top" alt="" />

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PED Malpractice Portal</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - PED Malpractice Portal - <a href="https://www.waecnigeria.org"> Property of The West African Examinations Council.</a>
        </div>
    </footer> 



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
