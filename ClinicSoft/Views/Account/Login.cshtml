@using ClinicSoft.Security
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

    <div class="login-box ">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <img src="~/dist/img/avatar.png" class="img-responsive img-circle " />
@*                <img src="~/Content/padlock.jpg" class="img-responsive img-circle " />
*@           
            </div>
            <div class="card-body">
                <p class="login-box-msg">Welcome to your Sign in page.....</p>

            <form asp-action="Login" method="post">
                    <div class="input-group mb-3">
                    <input type="email" class="form-control" name="UserName" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="Password" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>



            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>


